{
  "info": {
    "name": "Mall Smoke",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "User Login",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"username\":\"{{userUsername}}\",\"password\":\"{{userPassword}}\"}"
        },
        "url": "{{baseUrl}}/api/auth/login"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const json = pm.response.json();",
              "if (json && json.data && json.data.token) {",
              "  pm.environment.set('token', json.data.token);",
              "  pm.environment.set('userId', json.data.userId);",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "Search Products",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": "{{baseUrl}}/api/products?page=0&size=5"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const json = pm.response.json();",
              "const first = json && json.data && json.data.content && json.data.content[0];",
              "if (first && first.id) {",
              "  pm.environment.set('productId', first.id);",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "Add To Cart",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"productId\":{{productId}},\"quantity\":1}"
        },
        "url": "{{baseUrl}}/api/cart/items"
      }
    },
    {
      "name": "Create Address",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"receiver\":\"Test\",\"phone\":\"13800000002\",\"province\":\"ZJ\",\"city\":\"HZ\",\"area\":\"XS\",\"detail\":\"No.1 Road\",\"isDefault\":1}"
        },
        "url": "{{baseUrl}}/api/addresses"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const json = pm.response.json();",
              "if (json && json.data && json.data.id) {",
              "  pm.environment.set('addressId', json.data.id);",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "Create Order",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"addressId\":{{addressId}}}"
        },
        "url": "{{baseUrl}}/api/orders"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const json = pm.response.json();",
              "if (json && json.data && json.data.orderNo) {",
              "  pm.environment.set('orderNo', json.data.orderNo);",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "Pay Order",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": "{{baseUrl}}/api/orders/{{orderNo}}/pay"
      }
    },
    {
      "name": "Admin Login",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"username\":\"{{adminUsername}}\",\"password\":\"{{adminPassword}}\"}"
        },
        "url": "{{baseUrl}}/api/auth/login"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const json = pm.response.json();",
              "if (json && json.data && json.data.token) {",
              "  pm.environment.set('adminToken', json.data.token);",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "Admin Orders",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{adminToken}}" }
        ],
        "url": "{{baseUrl}}/api/admin/orders?page=0&size=5"
      }
    }
  ]
}
