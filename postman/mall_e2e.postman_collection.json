              "pm.expect(json.code).to.eql(200);",
              "const notices = (json.data && json.data.content) || [];",
              "const orderNo = pm.environment.get('orderNo');",
              "pm.test('notice contains current order', function () {",
              "  pm.expect(notices.some(x => x.orderNo === orderNo)).to.eql(true);",
