            "exec": [
              "pm.test('order list 200', function () { pm.response.to.have.status(200); });",
              "const json = pm.response.json();",
              "pm.expect(json.code).to.eql(200);",
              "const records = (json.data && json.data.content) || [];",
              "const orderNo = pm.environment.get('orderNo');",
              "const current = records.find(x => x.orderNo === orderNo);",
              "pm.expect(current, 'current order should exist').to.exist;",
              "pm.expect(current.status, 'status should be completed').to.eql(3);",
