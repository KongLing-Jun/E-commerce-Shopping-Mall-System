      "name": "00 Health",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/health"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('health status 200', function () { pm.response.to.have.status(200); });"
            ]
          }
        }
      ]
    },
    {
      "name": "01 User Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"username\":\"{{userUsername}}\",\"password\":\"{{userPassword}}\"}"
        },
        "url": "{{baseUrl}}/api/auth/login"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('user login 200', function () { pm.response.to.have.status(200); });",
              "const json = pm.response.json();",
              "pm.expect(json.code).to.eql(200);",
              "pm.environment.set('userToken', json.data.token);",
              "pm.environment.set('userId', json.data.userId);"
            ]
          }
        }
      ]
    },
    {
      "name": "02 Home Recommend",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{userToken}}"
          }
        ],
        "url": "{{baseUrl}}/api/home/recommend"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('recommend 200', function () { pm.response.to.have.status(200); });",
              "const json = pm.response.json();",
              "pm.expect(json.code).to.eql(200);",
              "const products = (json.data && (json.data.products || json.data.recommendProducts)) || [];",
              "pm.expect(products.length, 'recommend products should not be empty').to.be.greaterThan(0);",
              "pm.environment.set('productId', products[0].id);"
            ]
          }
        }
      ]
    },
